{
  "name": "light-job-scheduler",
  "version": "0.0.1",
  "description": "A lightweight job scheduler",
  "module": "./dist/esm/index.js",
  "typings": "types/index.d.ts",
  "author": "changqing",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/changqingom/light-scheduler.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT",
  "files": [
    "src",
    "dist",
    "types"
  ],
  "scripts": {
    "task:build": "npx rimraf ./dist ./types && tsc",
    "task:publish": "npm publish --registry=https://registry.npmjs.org/",
    "task:all": "npm run task:build && npm run task:publish",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "2.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "tslib": "^2.3.1"
  },
  "lint-staged": {
    "*.{ts,js,css,md}": "prettier --write"
  }
}
